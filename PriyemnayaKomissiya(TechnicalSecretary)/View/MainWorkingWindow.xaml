                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Image Source="pack://application:,,,/Resources/photograph.png" MouseUp="Image_MouseUp"/>
