                            <TextBlock x:Name="infoLgoti" Text="" Style="{DynamicResource TextBlock2}" Height="18" Width="524"/>
                        </InlineUIContainer></TextBlock>
                                    <TextBlock x:Name="infoStatiTB" Style="{DynamicResource TextBlock1}" Margin="10,0,0,0" ><Run Text="Статьи: " FontWeight="Bold"/><InlineUIContainer>
                            <TextBlock x:Name="infoStati" Text="" Style="{DynamicResource TextBlock2}" Height="19" Width="524"/>
