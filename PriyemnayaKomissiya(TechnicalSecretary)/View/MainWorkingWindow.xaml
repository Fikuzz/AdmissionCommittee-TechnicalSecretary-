                                            <MenuItem Header="Файл импорта в AD" Click="ImportToAD"/>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                            </Border>
                            <Border Width="33" Height="33" Background="{StaticResource FF576B}" CornerRadius="10" Margin="10,22,10,21">
                                <Image Source="pack://application:,,,/Resources/Layer 2.png" Margin="5" Tag="{Binding ElementName=PlanPriemaTable}"  MouseLeftButtonUp="CloseButtonUp"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <!--#endregion-->
                    <!--#region Просмотра информации-->
