                        <Grid.RowDefinitions>
                            <RowDefinition Height="95"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border CornerRadius="10" Background="#FF1A95B0" Margin="98,22,89,22">
                            <Grid Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="InfoFIO" Text="Andrey" Margin="15,10,15,0" FontSize="24" FontFamily="{StaticResource Montserrat-SemyBold}"  Foreground="White" VerticalAlignment="Top" Height="37"/>
