                                                <Image Margin="10,0,0,0" Source="pack://application:,,,/Resources/dots-horizontal.png" MouseUp="Image_MouseUp_2">
                                                    <Image.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Зачислить" Click="Abiturient_SetStatus" Tag="0,1"/>
                                                            <MenuItem Header="Принято" Click="Abiturient_SetStatus" Tag="0,0"/>
                                                            <MenuItem Header="Выдать документы" Click="Abiturient_IssueDocuments"/>
