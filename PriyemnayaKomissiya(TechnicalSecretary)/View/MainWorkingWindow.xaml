                                                            <MenuItem Header="Удалить" Click="Abiturient_Delete"/>
                                                        </ContextMenu>
                                                    </Image.ContextMenu>
                                                </Image>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="id" Visibility="Hidden" Binding="{Binding ID}"/>
                                <DataGridTextColumn Header="diff" Visibility="Hidden" Binding="{Binding DifferentAttestat}"/>
                                <DataGridTextColumn Header="isHide" Visibility="Hidden" Binding="{Binding Hide}"/>
                                <DataGridTextColumn Header="Status" Visibility="Hidden" Binding="{Binding Status}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Width="706" Grid.ColumnSpan="2">
                            <TextBox x:Name="textBoxSearch" Width="207" Margin="10,19,10,19" Style="{DynamicResource textboxSearch}" Text="" Background="#2676829B" Foreground="#FF76829B" FontSize="14" TextChanged="TextBoxSearch_TextChanged"/>
