                            </ComboBox>
                            <Button Style="{DynamicResource ButtonStyleObshchiyRED}" Content="Построить рейтинг" Width="122" Margin="10,17" Click="Button_Click" />
                            <Border Width="40" CornerRadius="10" Margin="10,17">
                                <Image Source="pack://application:,,,/Resources/printer.ico" Margin="3" MouseLeftButtonUp="PrintButton_Click" Tag="Print" Cursor="Hand"/>
                            </Border>
                            <Border Width="40" CornerRadius="10" Margin="10,17">
                                <Image Source="pack://application:,,,/Resources/ExcelIco.png" MouseLeftButtonDown="ExcelContextMenuOpen">
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Текущее состояние таблицы" Click="ToExcelButton_Click"/>
